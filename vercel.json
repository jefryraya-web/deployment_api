{
  "version": 2,
  "builds": [
    {
      "src": "router.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.php"
    },
    {
      "src": "/(?!api).*",
      "dest": "/public/index.html",
      "check": true
    },
    {
      "src": "/(.*)",
      "dest": "/router.php"
    }
  ],
  "env": {
    "PHP_MEMORY_LIMIT": "256M"
  }
}
